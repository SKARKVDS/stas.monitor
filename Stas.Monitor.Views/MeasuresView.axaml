<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Stas.Monitor.Views.MeasuresView" Margin="5">
    <Grid RowDefinitions="30,540">
        <Label Grid.Row="0" Name="TypeOfRelease" HorizontalAlignment="Center"/>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" Width="500" Height="500">
            <WrapPanel ItemHeight="100" ItemWidth="490" Orientation="Vertical" Name="MeasuresAndAlertsListView" HorizontalAlignment="Center"/>
        </ScrollViewer>
    </Grid>
</UserControl>
